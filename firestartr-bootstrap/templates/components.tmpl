{{ range $index, $claim := .Components }}
{{- if not $claim.Skipped }}
---
kind: ComponentClaim
version: "1.0"
type: service
lifecycle: production
{{- if $.System }}
system: system:{{ $.System }}
{{- else }}
system: system:{{ $.Org }}-system
{{- end }}
name: {{ $claim.Name }}
providers:
  github:
    description: {{ $claim.Description }}
    name: {{ default $claim.Name $claim.RepoName }}
    org: {{ $.Org }}
    visibility: private
    branchStrategy:
      name: none
      defaultBranch: {{ $claim.DefaultBranch }}
    actions:
      oidc:
        useDefault: false
        includeClaimKeys:
          - repo
    features:
      {{- range $index, $feature := $claim.Features }}
      - name: {{ $feature.Name }}
        version: {{ $feature.Version }}
      {{- end }}
{{ end }}
{{ end }}
---
kind: SystemClaim
version: "1.0"
{{- if $.System }}
name: {{ $.System }}
{{- else }}
name: {{ $.Org }}-system
{{- end }}
{{- if $.Domain }}
domain: domain:{{ $.Domain }}
{{- else }}
domain: domain:{{ $.Org }}-domain
{{- end }}
owner: group:{{ $.Org }}-all
description: "The principal system of {{ $.Org }}"
---
kind: DomainClaim
version: "1.0"
{{- if $.Domain }}
name: {{ $.Domain }}
{{- else }}
name: {{ $.Org }}-domain
{{- end }}
description: "The main domain of {{ $.Org }}"
owner: group:{{ $.Org }}-all
