{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Credentials File Schema",
    "$defs": {
        "DigitString": {
            "type": "string",
            "pattern": "^\\d+$",
            "description": "A string containing only one or more digits."
        }
    },
    "type": "object",
    "properties": {
        "cloudProvider": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "providerConfigName": {
                    "type": "string"
                },
                "config": {
                    "type": "object",
                    "properties": {
                        "bucket": {
                            "type": "string"
                        },
                        "region": {
                            "type": "string"
                        },
                        "access_key": {
                            "type": "string"
                        },
                        "secret_key": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "region",
                        "access_key",
                        "secret_key"
                    ]
                },
                "source": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "config",
                "source",
                "type",
                "version"
            ]
        },
        "github": {
            "type": "object",
            "properties": {
                "prefappBotPat": {
                    "type": "string"
                },
                "operatorPat": {
                    "type": "string"
                }

            },
            "required": [
                "prefappBotPat",
                "operatorPat"
            ]
        }
    },
    "required": [
        "cloudProvider",
        "github"
    ]
}
