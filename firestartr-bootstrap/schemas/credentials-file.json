{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Credentials File Schema",
    "type": "object",
    "properties": {
        "cloudProvider": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "providerConfigName": {
                    "type": "string"
                },
                "config": {
                    "type": "object",
                    "properties": {
                        "bucket": {
                            "type": "string"
                        },
                        "region": {
                            "type": "string"
                        },
                        "access_key": {
                            "type": "string"
                        },
                        "secret_key": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "region",
                        "access_key",
                        "secret_key"
                    ]
                },
                "source": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "providerConfigName",
                "config",
                "source",
                "type",
                "version"
            ]
        },
        "githubApp": {
            "type": "object",
            "properties": {
                "owner": {
                    "type": "string"
                },
                "botName": {
                    "type": "string"
                }
            },
            "required": [
                "owner",
                "botName"
            ]
        },
        "argoCD": {
            "type": "object",
            "properties": {
                "githubAppId": {
                    "type": "string",
					"pattern": "^\\d+$"
                },
                "githubAppInstallationId": {
                    "type": "string",
					"pattern": "^\\d+$"
                }
            },
            "required": [
                "githubAppId",
                "githubAppInstallationId"
            ]
        }
    },
    "required": [
        "cloudProvider",
        "githubApp",
		"argoCD"
    ]
}
